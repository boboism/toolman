- model_class = @<%= singular_table_name %>.class
.row-fluid.page-header
  .span5
    %h3= t(".title", title: "#{model_class.model_name.human}: #{@<%= singular_table_name %>.id}", default: t("helpers.views.edit.title", title: "#{model_class.model_name.human}: #{@<%= singular_table_name %>.id}"))
  .span7
    .pull-right
      .btn-group
        = link_to <%= plural_table_name %>_path, class: "btn" do
          %i.icon-list
          %span= t(".index", default: t("helpers.links.index"))
      .btn-group
        = render "layouts/toolbar"
.row-fluid
  .span12
    = render "form"
