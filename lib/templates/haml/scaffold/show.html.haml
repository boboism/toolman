- model_class = @<%= singular_table_name %>.class
.row-fluid.page-header
  .span5
    %h3= t(".title", title: "#{model_class.model_name.human}: #{@<%= singular_table_name %>.id}", default: t("helpers.views.show.title", title: "#{model_class.model_name.human}: #{@<%= singular_table_name %>.id}"))
  .span7
    .pull-right
      .btn-group
        = link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn" do
          %i.icon-pencil
          %span= t(".edit", default: t("helpers.links.edit"))

        = link_to @<%= singular_table_name %>, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do
          %i.icon-trash.icon-white
          %span= t(".destroy", default: t("helpers.links.destroy"))
        = link_to <%= plural_table_name %>_path, class: "btn" do
          %i.icon-list
          %span= t(".index", default: t("helpers.links.index"))
      .btn-group
        = render "layouts/toolbar"

.row-fluid
  .span12
    %table.table.table-bordered.table-hover.table-condensed.my-table-sheet
      %tbody
<% attributes.each do |attribute| -%>
        %tr
          %th.span2= model_class.human_attribute_name(:<%= attribute.name %>)
          %td.span10= @<%= singular_table_name %>.<%= attribute.name %>
<% end -%>
