- model_class = resource.class
.row-fluid.page-header
  .span5
    %h3= t('.title', title: "#{model_class.model_name.human}: #{@user.name}", default: t('helpers.views.show.title', title: "#{model_class.model_name.human}: #{@user.name}"))
  .span7
    .pull-right
      .btn-group
        = render 'layouts/toolbar'
.row-fluid
  .span12
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal well' }) do |f|
      = f.error_notification
      = display_base_errors resource
      .form-inputs
        = f.input :name, autofocus: true, required: true, input_html: { class: "input-block-level" }
        = f.input :emp_no, input_html: { class: "input-block-level" }
        = f.input :email, required: true, input_html: { class: "input-block-level" }
        = f.input :password, autocomplete: "off", hint: t('.change_pass_tip'), required: false, input_html: { class: "input-block-level" }
        = f.input :password_confirmation, required: false, input_html: { class: "input-block-level" }
        = f.input :current_password, autocomplete: "off", hint: t('.current_pass_tip'), required: true, input_html: { class: "input-block-level" }
      .form-actions
        = f.button :submit, t('helpers.links.submit'), class: 'btn-primary'
