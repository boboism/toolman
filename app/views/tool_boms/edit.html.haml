- model_class = @tool_bom.class
.row-fluid.page-header
  .span5
    %h3= t(".title", title: "#{model_class.model_name.human}: #{@tool_bom.id}", default: t("helpers.views.edit.title", title: "#{model_class.model_name.human}: #{@tool_bom.id}"))
  .span7
    .pull-right
      .btn-group
        = link_to @tool_bom, class: "btn" do
          %i.icon-eye-open
          %span= t(".show", default: t("helpers.links.show"))
        = link_to @tool_bom, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do
          %i.icon-trash.icon-white
          %span= t(".destroy", default: t("helpers.links.destroy"))
        = link_to tool_boms_path, class: "btn" do
          %i.icon-list
          %span= t(".index", default: t("helpers.links.index"))
      .btn-group
        = render "layouts/toolbar"
.row-fluid
  .span12
    = render "form"
