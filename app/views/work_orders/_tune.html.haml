= simple_form_for(@work_order, url: tune_work_orders_path, method: :post, html: {class: "well form-horizontal"}) do |f|
  = f.error_notification
  = display_base_errors @work_order
  .form-inputs
    = f.input :tuned_by, input_html: { class: "input-block-level" }
    = f.input :hilt_no, input_html: { class: "input-block-level" }, autofocus: true
    = f.input :tunning_machine, input_html: { class: "input-block-level" }
    = f.input :tunning_mode, input_html: { class: "input-block-level" }
    = f.input :tunning_man_hour, input_html: { class: "input-block-level" }

  .form-actions
    = f.button :submit, t('helpers.links.submit'), class: 'btn-primary'
