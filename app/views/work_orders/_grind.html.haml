= simple_form_for(@work_order_item, url: grind_work_orders_path, method: :post, html: {class: "well form-horizontal"}) do |f|
  = f.error_notification
  = display_base_errors @work_order_item
  .form-inputs
    = f.input :grinded_by, input_html: { class: "input-block-level" }
    = f.input :serial_no, input_html: { class: "input-block-level" }, autofocus: true
    = f.input :grinding_machine, input_html: { class: "input-block-level" }
    = f.input :grinding_mode, input_html: { class: "input-block-level" }
    = f.input :grinding_man_hour, input_html: { class: "input-block-level" }

  .form-actions
    = f.button :submit, t('helpers.links.submit'), class: 'btn-primary'
