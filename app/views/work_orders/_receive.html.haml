= simple_form_for(@work_order, url: receive_work_orders_path, method: :post, html: {class: "well form-horizontal"}) do |f|
  = f.error_notification
  = display_base_errors @work_order
  .form-inputs
    = f.input :hilt_no, input_html: { class: "input-block-level" }, autofocus: true

  .form-actions
    = f.button :submit, t('helpers.links.submit'), class: 'btn-primary'
